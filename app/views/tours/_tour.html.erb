  <div class="blog-item">
    <div class="position-relative">
      <%= image_tag default_image(tour), class: "img-fluid w-100", alt: t("tours.tour_image") %>
    </div>
    <div class="bg-white p-4">
      <div class="d-flex mb-2">
        <%= link_to tour.tour_name, tour, data: { turbo_frame: false } %>
      </div>
      <div class="row">
        <div class="col-md-4">
          <span class="font-weight-bold"><%= t("tours.tour_description") %></span>
        </div>
        <div class="col-md-8">
          <p class="h5 m-0 text-decoration-none truncate" id="tourDescription"><%= tour.tour_description %></p>
          <a href="#" class="d-none" id="readMoreLink">Xem thÃªm</a>
        </div>
      </div>
      <%=render "tours/information", tour: tour %>
