<div class="row">
  <div class="col-md-3">
    <% if !tour.followed_users.include?(current_user) %>
      <%= link_to follow_tour_path(tour), class: "h5 m-0 text-decoration-none" do %>
        <%= tour.tour_followings.count %>
        <i class="fas fa-heart"></i>
      <% end %>
    <% else %>
      <%= link_to unfollow_tour_path(tour), class: "nav-link text-danger", data: { turbo_method: "delete" } do %>
        <%= tour.tour_followings.count %>
        <i class="fas fa-heart"></i>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-3">
    <a class="h5 m-0 text-decoration-none" href="#"><%= tour.reviews.count %><i class="fas fa-comment"></i></a>
  </div>
  <div class="col-md-6">
    <a class="h5 m-0 text-decoration-none" href="#"><%= t("tours.number_book", number: tour.bookings.count)  %></a>
  </div>
</div>
